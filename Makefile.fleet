setup:
	@echo "ğŸ“¦ Setting up Fleet Management System..."
	@echo "Creating .env file..."
	@if [ ! -f ".env" ]; then \
		cp .env.example .env 2>/dev/null || \
		echo "# Fleet Management System Environment\nPOSTGRES_PASSWORD=fleet_password_change_in_production\nSECRET_KEY_FDM=dev-secret-key-fdm\nSECRET_KEY_FWM=dev-secret-key-fwm" > .env; \
	fi
	@echo "Creating shared directories..."
	@mkdir -p shared/{types,components,utils}
	@mkdir -p static
	@echo "âœ… Setup complete!"

migrate:
	@echo "ğŸ”„ Migrating from ConnectDisplay to Fleet Management System..."
	@echo "Current structure preserved in backend/ and frontend/"
	@echo "New structure created in services/"
	@echo ""
	@echo "Next steps:"
	@echo "1. Review docker-compose.fleet.yml"
	@echo "2. Update .env with your settings"
	@echo "3. Run: make build"
	@echo "4. Run: make up"

build:
	@echo "ğŸ—ï¸  Building services..."
	@docker-compose -f $(COMPOSE_FILE) build --no-cache

up: 
	@echo "ğŸš€ Starting Fleet Management System..."
	@docker-compose -f $(COMPOSE_FILE) up -d
	@echo ""
	@echo "âœ… Services started:"
	@echo "  ğŸ¯ Connect Display:       http://localhost:8100"
	@echo "  ğŸ“Š Fleet Data Manager:    http://localhost:8200/docs"
	@echo "  ğŸ”§ Fleet Workshop Mgr:    http://localhost:8201/docs"
	@echo "  ğŸ“ CDN:                   http://localhost:9000"
	@echo "  ğŸ—„ï¸  PostgreSQL:            localhost:5432"
	@echo "  âš¡ Redis:                 localhost:6379"
	@echo ""

down:
	@echo "ğŸ›‘ Stopping services..."
	@docker-compose -f $(COMPOSE_FILE) down

restart: down up

logs-fdm:
	@docker-compose -f $(COMPOSE_FILE) logs -f fleet-data-manager

logs-fwm:
	@docker-compose -f $(COMPOSE_FILE) logs -f fleet-workshop-manager

logs-display:
	@docker-compose -f $(COMPOSE_FILE) logs -f connect-display

logs-cdn:
	@docker-compose -f $(COMPOSE_FILE) logs -f cdn

health:
	@echo "ğŸ¥ Checking Fleet Management System health..."
	@echo ""
	@echo "ğŸ” Services status:"
	@docker-compose -f $(COMPOSE_FILE) ps
	@echo ""
	@echo "ğŸ” API Health checks:"
	@curl -s http://localhost:8200/api/v1/health | jq '.' 2>/dev/null || echo "âŒ Fleet Data Manager: Unavailable"
	@curl -s http://localhost:8201/api/v1/health | jq '.' 2>/dev/null || echo "âŒ Fleet Workshop Manager: Unavailable"
	@curl -s http://localhost:9000/health 2>/dev/null && echo "âœ… CDN: Healthy" || echo "âŒ CDN: Unavailable"
	@echo ""

clean:
	@echo "ğŸ§¹ Cleaning up..."
	@docker-compose -f $(COMPOSE_FILE) down -v
	@docker system prune -f
	@echo "âœ… Cleanup complete!"

dev-fdm:
	@echo "ğŸ”§ Starting Fleet Data Manager in development mode..."
	@cd services/backend/fleet-data-manager && \
		python -m uvicorn app.main:app --host 0.0.0.0 --port 8200 --reload

dev-fwm:
	@echo "ğŸ”§ Starting Fleet Workshop Manager in development mode..."
	@cd services/backend/fleet-workshop-manager && \
		python -m uvicorn app.main:app --host 0.0.0.0 --port 8201 --reload

# Quick commands for backwards compatibility
start: up
stop: down
status: health
